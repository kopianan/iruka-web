@using Iruka.Models;
@using Iruka.DAL;

@section css{}
@section js{
}
<div>
    <table class="table table-hover table-bordered" id="user-table">
        <thead>
            <tr>
                <th> Role </th>
                <th> Name </th>
                <th> Email </th>
                <th> Phone </th>
                <th> Address </th>
                <th> Action </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in DALUsers.GetAllUserBaseOnRole(new List<string> { RoleList.Admin, RoleList.Finance, RoleList.ContentManager }))
            {
                <tr>
                    <td>@item.Role</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Address</td>
                    <td style="width:10%">
                        <button type="button" class="btn btn-secondary btn-fw" onclick="location.href='@Url.Action("InternalUserEdit", "Account", new {id = item.Id })'" style="min-width:50px">
                            <i class="mdi mdi-pencil" style="margin:0px"></i>
                        </button>
                        <button type="button" class="btn btn-danger btn-fw" onclick="deleteUser('@item.Id', true)" style="min-width:50px">
                            <i class="mdi mdi-delete" style="margin:0px"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
